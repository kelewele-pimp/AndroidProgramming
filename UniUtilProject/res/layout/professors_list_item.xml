<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/card"
        android:orientation="horizontal">

        <!-- Card Contents go here -->

        <TextView
            android:id="@+id/professor_card_pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="professor_name"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <!-- Will be a concatenation of the coursename and the the room in which the course is taken -->

        <TextView
            android:id="@+id/professor_card_coursename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/professor_card_pname"
            android:layout_marginTop="5sp"
            android:text="course_name"
            android:textAppearance="?android:attr/textAppearanceSmall" />
    </RelativeLayout>

</FrameLayout>